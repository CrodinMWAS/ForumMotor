@page
@model ForumMotor.Pages.PostPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <input asp-for="Post.Content" class="form-control" />
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ForumUser" class="control-label"></label>
                <input asp-for="Post.ForumUser" class="form-control" />
                <span asp-validation-for="Post.ForumUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CreatedDate" class="control-label"></label>
                <input asp-for="Post.CreatedDate" class="form-control" />
                <span asp-validation-for="Post.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.UpdatedDate" class="control-label"></label>
                <input asp-for="Post.UpdatedDate" class="form-control" />
                <span asp-validation-for="Post.UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.TopicId" class="control-label"></label>
                <select asp-for="Post.TopicId" class ="form-control" asp-items="ViewBag.TopicId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Post.PostReplies" class="control-label"></label>
                <input asp-for="Post.PostReplies" class="form-control" />
                <span asp-validation-for="Post.PostReplies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
